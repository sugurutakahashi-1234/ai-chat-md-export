{
  "name": "ai-chat-md-export",
  "version": "0.1.1",
  "description": "CLI tool to convert ChatGPT and Claude chat history to Markdown",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "chatgpt",
    "claude",
    "ai",
    "chat",
    "export",
    "markdown",
    "cli",
    "converter"
  ],
  "author": "Suguru Takahashi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sugurutakahashi-1234/ai-chat-md-export.git"
  },
  "bugs": {
    "url": "https://github.com/sugurutakahashi-1234/ai-chat-md-export/issues"
  },
  "homepage": "https://github.com/sugurutakahashi-1234/ai-chat-md-export#readme",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "ai-chat-md-export": "bin/ai-chat-md-export.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "scripts": {
    "prepare": "husky",
    "help": "bun run bin/ai-chat-md-export.js -h",
    "typecheck": "tsc --noEmit",
    "build:js": "tsc",
    "build:binary": "bun build src/cli.ts --compile --outfile dist/ai-chat-md-export && rm -f .*.bun-build",
    "update:version": "bun run scripts/update-version.js",
    "build": "bun run build:js && bun run build:binary",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "bun test",
    "test:binary": "bun run build && bun test tests/binary",
    "test:node": "bun run build:js && bun test tests/integration/node-js.test.ts",
    "test:e2e": "bun run scripts/test-npm-package.js",
    "test:coverage": "bun test --coverage",
    "test:coverage:html": "bun test --coverage && lcov-viewer lcov coverage/lcov.info -o coverage/html",
    "codecov:validate": "cat codecov.yml | curl --data-binary @- https://codecov.io/validate",
    "deps:check": "npm-check-updates --deep",
    "deps:update": "npm-check-updates -u --deep && bun install",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "ci": "bun run format && bun run typecheck && bun run lint:check && bun run build && bun run test:coverage && bun run knip",
    "clean": "rm -rf bun.lock node_modules releases dist coverage .*.bun-build tsconfig.tsbuildinfo output/chatgpt/*.md output/claude/*.md && bun install",
    "clean:build": "bun run clean && bun run ci",
    "release": "release-it",
    "release:dry-run": "release-it --dry-run",
    "example:chatgpt": "bun bin/ai-chat-md-export.js -i input/chatgpt/conversations.json -o output/chatgpt -f chatgpt",
    "example:claude": "bun bin/ai-chat-md-export.js -i input/claude/conversations.json -o output/claude -f claude",
    "example:all": "bun run example:chatgpt && bun run example:claude",
    "example:chatgpt:binary": "./dist/ai-chat-md-export -i input/chatgpt/conversations.json -o output/chatgpt -f chatgpt",
    "example:claude:binary": "./dist/ai-chat-md-export -i input/claude/conversations.json -o output/claude -f claude",
    "example:all:binary": "bun run example:chatgpt:binary && bun run example:claude:binary"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@lcov-viewer/cli": "^1.3.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.13",
    "husky": "^9.1.7",
    "knip": "^5.61.3",
    "npm-check-updates": "^18.0.1",
    "release-it": "^19.0.3",
    "typescript": "^5.8.3"
  }
}
