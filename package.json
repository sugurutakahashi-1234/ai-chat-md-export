{
  "name": "ai-chat-md-export",
  "version": "0.1.1",
  "description": "CLI tool to convert ChatGPT and Claude chat history to Markdown",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "engineStrict": false,
  "bin": {
    "ai-chat-md-export": "bin/ai-chat-md-export.js"
  },
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "help": "bun run bin/ai-chat-md-export.js -h",
    "typecheck": "tsc --noEmit",
    "build": "bun build src/cli.ts --compile --outfile dist/ai-chat-md-export && rm -f .*.bun-build",
    "homebrew:build": "bash homebrew/build-releases.sh && rm -f .*.bun-build",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test": "bun test",
    "test:binary": "bun run build && bun test tests/binary",
    "test:coverage": "bun test --coverage",
    "test:coverage:html": "bun test --coverage && lcov-viewer lcov coverage/lcov.info -o coverage/html",
    "clean": "rm -rf bun.lock node_modules releases dist coverage .*.bun-build tsconfig.tsbuildinfo output/*.md && bun install",
    "deps:check": "bunx npm-check-updates --deep",
    "deps:update": "bunx npm-check-updates -u --deep && bun install",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "ci": "bun run typecheck && bun run lint:check && bun run build && bun run test && bun run knip",
    "example:chatgpt": "bun run src/cli.ts -i input/chatgpt/conversations.json -o output/chatgpt -f chatgpt",
    "example:claude": "bun run src/cli.ts -i input/claude/conversations.json -o output/claude -f claude",
    "release": "release-it"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@lcov-viewer/cli": "^1.3.0",
    "@types/bun": "^1.2.18",
    "@types/node": "^24.0.12",
    "knip": "^5.61.3",
    "release-it": "^19.0.3",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "chatgpt",
    "claude",
    "ai",
    "chat",
    "export",
    "markdown",
    "cli",
    "converter"
  ],
  "author": "Suguru Takahashi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sugurutakahashi-1234/ai-chat-md-export.git"
  },
  "bugs": {
    "url": "https://github.com/sugurutakahashi-1234/ai-chat-md-export/issues"
  },
  "homepage": "https://github.com/sugurutakahashi-1234/ai-chat-md-export#readme"
}
