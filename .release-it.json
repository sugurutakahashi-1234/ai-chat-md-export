{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "pushRepo": "origin",
    "requireCommits": true,
    "requireCleanWorkingDir": true,
    "requireUpstream": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "echo \"${changelog}\"",
    "draft": false,
    "preRelease": false
  },
  "npm": {
    "publish": true,
    "publishPath": ".",
    "tag": "latest",
    "otp": "",
    "ignoreVersion": false,
    "skipChecks": false
  },
  "hooks": {
    "before:init": ["bun run ci"],
    "after:bump": ["bun run build"],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "âœ¨ Features" },
          { "type": "fix", "section": "ğŸ› Bug Fixes" },
          { "type": "perf", "section": "âš¡ Performance Improvements" },
          { "type": "docs", "section": "ğŸ“š Documentation" },
          { "type": "style", "section": "ğŸ’„ Styling" },
          { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
          { "type": "test", "section": "âœ… Tests" },
          { "type": "build", "section": "ğŸ“¦ Build System" },
          { "type": "ci", "section": "ğŸ‘· CI/CD" },
          { "type": "chore", "section": "ğŸ”§ Maintenance" }
        ]
      },
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": {
        "file": "src/version.ts",
        "search": "export const VERSION = \"[0-9.]+\";",
        "replace": "export const VERSION = \"${version}\";"
      }
    }
  }
}
