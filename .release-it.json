{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "pushRepo": "origin",
    "requireCommits": true,
    "requireCleanWorkingDir": true,
    "requireUpstream": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": "echo \"${changelog}\"",
    "draft": false,
    "preRelease": false
  },
  "npm": {
    "publish": true,
    "publishPath": ".",
    "tag": "latest",
    "otp": "",
    "ignoreVersion": false,
    "skipChecks": false
  },
  "hooks": {
    "before:init": ["export HUSKY=0", "bun run ci"],
    "after:bump": ["bun run build"],
    "after:release": [
      "echo Successfully released ${name} v${version} to ${repo.repository}",
      "gh workflow run cd-homebrew-release.yml -f tag_name=v${version}"
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "‚ú® Features" },
          { "type": "fix", "section": "üêõ Bug Fixes" },
          { "type": "perf", "section": "‚ö° Performance Improvements" },
          { "type": "docs", "section": "üìö Documentation" },
          { "type": "style", "section": "üíÑ Styling" },
          { "type": "refactor", "section": "‚ôªÔ∏è Code Refactoring" },
          { "type": "test", "section": "‚úÖ Tests" },
          { "type": "build", "section": "üì¶ Build System" },
          { "type": "ci", "section": "üë∑ CI/CD" },
          { "type": "chore", "section": "üîß Maintenance" }
        ]
      },
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "out": {
        "file": "src/version.ts",
        "search": "export const VERSION = \"[0-9.]+\";",
        "replace": "export const VERSION = \"${version}\";"
      }
    }
  }
}
